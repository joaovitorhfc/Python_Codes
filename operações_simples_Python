n1= int(input('Digite um valor: '))
n2= int(input('Digite outro valor: '))
d = n1 / n2
m = n1 * n2
s = n1 + n2
p = n1 ** n2
r = n1 **(1/2),n2
di = n1 // n2
dr = n1 % n2
print ('A soma vale {}, o produto {} e a divisão é {:.3f} '.format(s,m,d))
print ('Divisão inteira {} e potência {}'.format(di,p))
